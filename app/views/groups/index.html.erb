<div class="col-md-12">
  <div class="挑戰">
    <%= link_to("新挑戰", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>名稱</td>
        <td>描述</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
            <% if group.editable_by?(current_user) %>
            <td align="right">
              <%= link_to("改", edit_group_path(group), class: "btn btn-sm btn-info")%>
              <%= link_to("滅", group_path(group),    class: "btn btn-sm btn-danger",
                          method: :delete, data: { confirm: "挑戰刪去?" } )%>
            </td>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
