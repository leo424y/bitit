<div class="col-md-12">
  <div class="group">
    <% if @group.editable_by?(current_user) %>
      <%= link_to("行動。新", new_group_post_path(@group), class: "btn btn-warning pull-right") %>
      <%= link_to("挑戰。改", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
    <% if current_user.present? %>
      <% if current_user.is_member_of?(@group) %>
        <%= link_to("戰逃", quit_group_path(@group), method: :post, class: "btn btn-danger") %>
      <% else %>
        <%= link_to("入戰", join_group_path(@group), method: :post, class: "btn btn-info") %>
      <% end %>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= simple_format(@group.description) %></p>

  <table class="table">
   <thead>
     <tr>
       <th>挑戰行動</th>
       <th colspan="2"></th>
     </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= render_post_content(post) %></td>
         <td>
           <% if @group.editable_by?(current_user) %>
             <td align="right">
               <%= link_to('改', edit_group_post_path(post.group, post), class: "btn btn-info btn-xs") %>
               <%= link_to('滅', group_post_path(post.group, post), method: :delete, data: { confirm: "行動消滅?" }, class: "btn btn-danger btn-xs") %>
             </td>
           <% end %>
         </td>
       </tr>
     <% end %>
   </tbody>
  </table>
</div>
