<h1 class="text-center">新增挑戰行動</h1>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"}, autofocus: true %>
    </div>
    <div class="form-actions">
      <%= f.submit "確認行動", disable_with: "行動送出中...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
