<div class="col-md-4 col-md-offset-4">
  <div class="group">
    <% if @group.editable_by?(current_user) %>
      <%= link_to("解字。新", new_group_post_path(@group), class: "btn btn-success pull-right") %>
      <%= link_to("字造。改", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
    <%= link_to("字造。再創", fork_group_path(@group), class: "btn btn-primary pull-right")%>
    <% if current_user.present? %>
      <% if current_user.is_member_of?(@group) %>
        <%= link_to("不採", quit_group_path(@group), method: :post, class: "btn btn-danger") %>
      <% else %>
        <%= link_to("採", join_group_path(@group), method: :post, class: "btn btn-info") %>
      <% end %>
    <% end %>
  </div>
  <br />
  <div align="center"><%= content_tag(:a , image_tag("https://tools.wmflabs.org/idsgen/#{@group.title}.png?字體=#{@group.font}", size: "250", alt: @group.title),:href => "https://tools.wmflabs.org/idsgen/#{@group.title}.svg?字體=#{@group.font}" ,:download =>"" ) %></div>
  <br />
  <h4>文字組合碼：<%= @group.title %></h2>
  <h4>字型：<%= @group.font %></h2>
  <h4>創作者：<%= @group.owner ? @group.owner.name : "路人甲" %></h2>
  <p><%= simple_format(@group.description) %></p>
  <table class="table table-responsive">
   <thead>
     <tr>
       <th>解字</th>
       <th colspan="2"></th>
     </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= render_post_content(post) %></td>
         <td>
           <% if @group.editable_by?(current_user) %>
             <td align="right">
               <%= link_to('改', edit_group_post_path(post.group, post), class: "btn btn-info btn-xs") %>
               <%= link_to('滅', group_post_path(post.group, post), method: :delete, data: { confirm: "解字消滅?" }, class: "btn btn-danger btn-xs") %>
             </td>
           <% end %>
         </td>
       </tr>
     <% end %>
   </tbody>
  </table>
  <%= social_share_button_tag(@group.title, :popup => "true", :url => request.original_url, :image => "https://tools.wmflabs.org/idsgen/#{@group.title}.png?字體=宋體") %>
  <%= render 'disqus' %>
</div>
